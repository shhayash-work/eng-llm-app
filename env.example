# 環境変数設定例
# 実際の運用時は .env ファイルにコピーして使用してください

# LLMプロバイダー設定
LLM_PROVIDER=ollama  # ollama, openai, anthropic
DEFAULT_MODEL=llama3.3:latest

# Ollama設定
OLLAMA_MODEL=llama3.3:latest
OLLAMA_BASE_URL=http://localhost:6081

# OpenAI設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Anthropic設定
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# データパス設定
DATA_DIRECTORY=./data
VECTOR_STORE_DIRECTORY=./vector_store

# ログ設定
LOG_LEVEL=INFO

# アプリケーション設定
DEBUG_MODE=False
STREAMLIT_PORT=8501